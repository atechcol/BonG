<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="BonG.UI.MainWindow"
        Title="BonG">

    <StackPanel>
        <TextBlock Padding="10" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center">BonG</TextBlock>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Margin="10">
                <TextBlock>Log</TextBlock>
                <TextBlock 
                    Grid.Column="0" 
                    FontSize="10"
                    FontFamily="monospace"
                    Background="DarkSlateGray"
                    Padding="5"
                    TextWrapping="Wrap">
                    Lorem Ipsum
                </TextBlock>
            </StackPanel>
            
            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                <TextBlock Height="100"></TextBlock>
                <Grid ColumnSpacing="6" RowSpacing="6" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Button Grid.Column="1" Grid.Row="1">1</Button>
                    <Button Grid.Column="2" Grid.Row="1">2</Button>
                    <Button Grid.Column="3" Grid.Row="1">3</Button>
                    <Button Grid.Column="1" Grid.Row="2">4</Button>
                    <Button Grid.Column="2" Grid.Row="2">5</Button>
                    <Button Grid.Column="3" Grid.Row="2">6</Button>
                    <Button Grid.Column="1" Grid.Row="3">7</Button>
                    <Button Grid.Column="2" Grid.Row="3">8</Button>
                    <Button Grid.Column="3" Grid.Row="3">9</Button>
                    
                    <Button Grid.Column="4" Grid.Row="1">+</Button>
                    <Button Grid.Column="4" Grid.Row="2">-</Button>
                    <Button Grid.Column="4" Grid.Row="3">*</Button>
                </Grid>
                <StackPanel Orientation="Horizontal" Spacing="6" Margin="1">
                    <Button Background="ForestGreen">Enter</Button>
                    <Button Background="OrangeRed">Del</Button>
                    <Button>/</Button>
                </StackPanel>
            </StackPanel>
            
            <StackPanel Grid.Column="2" Margin="11">
                <TextBlock>Info</TextBlock>
                <TextBlock                     
                    FontSize="12"
                    FontFamily="monospace"
                    Background="DarkSlateGray"
                    Padding="5"
                    TextWrapping="Wrap">
                    <Bold>Item:</Bold> John Ã˜l <LineBreak />
                    <Bold>Price:</Bold> 100.- <LineBreak />
                    <Bold>Quantity:</Bold> 3 <LineBreak />
                    <Bold>Total:</Bold> <Run FontSize="20" Text="30.-" /> <LineBreak />
                </TextBlock>
                <Button>Purchase</Button>
                <Button>Print Receipt</Button>
            </StackPanel>
        </Grid>
    </StackPanel>
</Window>
